---
import VisionGlasses from '../assets/vna-glasses.svg';
---

<div class="hero">
    <div class="brand">
        <VisionGlasses class="logo-hero" />
        <h1>Vision Network</h1>
    </div>
   <div class="back">
        <slot />
   </div>
</div>

<style>
	.brand {
		display: flex;
		flex-direction: row;
        align-items: center;
	}

	.logo-hero {
		width: 6rem;
		margin-right: 1rem;
	}

    .hero {
        display: flex;
        flex-direction: column;
        align-items: left;
    }

    @media (max-width: 600px) {
        .brand {
            flex-direction: column;
            text-align: center;
        }

        .logo-hero {
            margin-right: 0;
            margin-bottom: 0;
        }

        h1 {
            margin-top: 0.5rem;
        }
    }
</style>